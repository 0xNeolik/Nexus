<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-4">

      <h1>Registro de usuario</h1>
      <br />
      <hr />
      <br />

      <form action="/auth/signup" method="POST">
        <div class="form-group">
          <label for="username">Nombre de usuario</label>
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">Contraseña</label>
          <input
            type="password"
            class="form-control"
            id="password"
            name="userPwd"
            required
          />
        </div>

        <button
          type="submit"
          class="btn btn-dark btn-block"
        >Registrarme</button>
      </form>

      {{#if errorMsg}}
        <p id="errorMessage">{{errorMsg}}</p>
      {{/if}}

      <hr />

      <p>¿Ya estás registrad@? <a href="/auth/login">Inicia sesión</a>.</p>

    </div>
  </div>

</div>