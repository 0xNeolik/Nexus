<div class="container" id="profile-edit">

  <div class="row justify-content-center">
    <div class="col-md-8">
      <form action="/auth/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
        
        <div class="form-group" >
          <img src="{{user.image}}" alt="" class="col-5">
          <label class="col-6">Nueva imagen
            <input type="file" name="new-image" class="form-control-file" id="img-form" />
            <input type="text" name="existingImage" hidden value="{{user.image}}" />
           
          </label>
         
        </div>

        <div class="form-group">
          <label for="name">Nuevo nombre</label>
          <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" required />
        </div>

        <div class="form-group" id="description-form">
          <label for="password">Nueva descripcion</label>
          <input
            type="text"
            class="form-control"
            id="password"
            name="description"
            value="{{user.description}}"
            required
          />
        </div>

        <button type="submit" class="btn btn-dark btn-block">Save</button>
      </form>
    </div>
  </div>
</div>