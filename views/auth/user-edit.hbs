<div class="container">

  <div class="row">
    <div class="col-md-6">
      <form action="/auth/edit?id={{user.id}}" method="POST">
        <div class="form-group">
          <div class="form-group">
            <label for="userimage">Nueva imagen</label>
            <input
              type="text"
              class="form-control"
              id="userimage"
              name="image"
              value="{{user.image}}"
              required
            />
          </div>
          <label for="name">Nuevo nombre</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="{{user.name}}"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Nueva descripcion</label>
          <input
            type="text"
            class="form-control"
            id="password"
            name="description"
            value="{{user.description}}"
            required
          />
        </div>

        <button
          type="submit"
          class="btn btn-dark btn-block"
        >Registrarme</button>
      </form>
    </div>
  </div>
</div>